FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json* ./
COPY apps/aam-web/package.json ./apps/aam-web/

RUN npm ci --legacy-peer-deps

COPY apps/aam-web .

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
