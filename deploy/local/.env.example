# =============================================================================
# AAM Local Deployment â€” Environment Variables
# =============================================================================
# Copy this file to .env and set real values. NEVER commit .env to git.
#
#   cp .env.example .env
#
# IMPORTANT: No default/fallback values are used in application code.
# Every variable listed here MUST be set explicitly.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
SECRET_KEY=local-dev-only-change-in-production

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=aam
POSTGRES_PASSWORD=aam_local_secret
POSTGRES_DB=aam
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=redis_local_secret
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_local_secret
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_BUCKET=aam-packages

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost"]

# -----------------------------------------------------------------------------
# Web Frontend
# -----------------------------------------------------------------------------
WEB_PORT=3000
API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Nginx (production-like local testing only)
# -----------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443
